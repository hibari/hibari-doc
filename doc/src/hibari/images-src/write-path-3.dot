digraph data_flow {
    //nodesep = 0.5;
    CLIENT [label="Client"];
    HEAD [label="Head Brick"];
    MIDDLE [label="Middle Brick"];
    TAIL [label="Tail Brick\n+Official Tail"];
    {rank=same; HEAD MIDDLE TAIL};

    CLIENT -> HEAD [label="Update request"];
    HEAD -> MIDDLE [label="Replication"];
    MIDDLE -> TAIL [label="Replication"];
    TAIL -> CLIENT [label="Update reply"];
};
